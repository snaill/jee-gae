<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:d="urn:import:com.google.gwt.user.datepicker.client">

  <ui:image field='logo' src='logo.png'/>

  <ui:style>
  .logo {
    gwt-image: 'logo';
    float: left;
    padding-right: 1em;
  }
  </ui:style>

<g:VerticalPanel>
	<g:cell>
		<g:HTMLPanel>
			Name:<g:TextBox ui:field="nameTextBox"></g:TextBox>
		</g:HTMLPanel>
	</g:cell>
	<g:cell>
		<g:HTMLPanel>
			Default Context:<g:ListBox ui:field="defaultContextListBox"></g:ListBox>
			<g:Button>+</g:Button>
		</g:HTMLPanel>
	</g:cell>
	<g:cell><g:HorizontalPanel>
		<g:cell> <g:Button text='Save and New' ui:field='saveAndNewButton' /></g:cell>
		<g:cell> <g:Button text='Save' ui:field='saveButton' /></g:cell>
		<g:cell> <g:Button text='Close' ui:field='closeButton' /></g:cell>
	</g:HorizontalPanel>
	</g:cell>
</g:VerticalPanel>
</ui:UiBinder>
