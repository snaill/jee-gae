<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:SplitLayoutPanel>
		<g:west size='100'>
			      <g:ScrollPanel>
        <g:FlexTable ui:field='contextTable' cellSpacing='0' cellPadding='0'/>
      </g:ScrollPanel>
		</g:west>

		<g:center>
			<g:HTMLPanel>
				Hello,
				<g:Button styleName="{style.important}" ui:field="button" />
			</g:HTMLPanel>
		</g:center>
	</g:SplitLayoutPanel>

</ui:UiBinder> 